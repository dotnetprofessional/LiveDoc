{
    "name": "livedoc-vscode",
    "displayName": "livedoc (Gherkin) tools and code snippets",
    "description": "Tools and snippets for working with the livedoc-mocha testing library",
    "version": "0.0.1",
    "publisher": "dotnetprofessional",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Snippets"
    ],
    "keywords": [
        "livedoc",
        "mocha",
        "bdd",
        "gherkin",
        "cucumber",
        "javascript",
        "testing",
        "tests"
    ],
    "activationEvents": [
        "onCommand:extension.formatDataTables",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:javascriptreact",
        "onLanguage:javascript",
        "onLanguage:plaintext"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.formatDataTables",
                "title": "Format Data Tables"
            }
        ],
        "snippets": [
            {
                "language": "typescript",
                "path": "./snippets/livedoc.json"
            },
            {
                "language": "typescriptreact",
                "path": "./snippets/livedoc.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/livedoc.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}